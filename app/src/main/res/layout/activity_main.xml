<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0DFE6"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/clickMeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="47dp"
        android:backgroundTint="#3F51B5"
        android:text="START"
        android:textColor="#23DCD5"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/textViewxx"
        android:layout_width="406dp"
        android:layout_height="427dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/cute" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="410dp"
        android:layout_height="69dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/vast_shadow"
        android:text="Welcome To Snoopy The Dog App"
        android:textAlignment="center"
        android:textColor="#023E5E"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>